{
  "compilerOptions": {
    "target": "es5",
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/": [
        "src/components/"
      ],
      "@/pages/": [
        "src/pages/"
      ],
      "@/services/": [
        "backend/services"
      ],
      "@/styles/": [
        "src/styles/"
      ],
      "@/utils/": [
        "backend/utils"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "*/.ts",
    "*/.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
